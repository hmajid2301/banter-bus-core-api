{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run: Socketio API",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--reload", "--port", "8080"],
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Tests: Unit",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "tests/unit"],
      "justMyCode": false
    },
    {
      "name": "Tests: Integration",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "tests/integration"],
      "justMyCode": false
    },
    {
      "name": "Test: Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "${file}"],
      "justMyCode": false
    }
  ]
}
